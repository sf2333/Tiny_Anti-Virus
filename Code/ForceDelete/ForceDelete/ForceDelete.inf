;
; ForceDelete.inf
;

[Version]
Signature="$WINDOWS NT$"
Class=Sample ; TODO: edit Class
ClassGuid={78A1C341-4539-11d3-B88D-00C04FAD5171} ; TODO: edit ClassGuid
Provider=%ManufacturerName%
CatalogFile=ForceDelete.cat
DriverVer= ; TODO: set DriverVer in stampinf property pages
PnpLockDown=1

[DestinationDirs]
DefaultDestDir = 12
ForceDelete_Device_CoInstaller_CopyFiles = 11

; ================= Class section =====================

[ClassInstall32]
Addreg=SampleClassReg

[SampleClassReg]
HKR,,,0,%ClassName%
HKR,,Icon,,-5

[SourceDisksNames]
1 = %DiskName%,,,""

[SourceDisksFiles]
ForceDelete.sys  = 1,,
WdfCoInstaller$KMDFCOINSTALLERVERSION$.dll=1 ; make sure the number matches with SourceDisksNames

;*****************************************
; Install Section
;*****************************************

[Manufacturer]
%ManufacturerName%=Standard,NT$ARCH$

[Standard.NT$ARCH$]
%ForceDelete.DeviceDesc%=ForceDelete_Device, Root\ForceDelete ; TODO: edit hw-id

[ForceDelete_Device.NT]
CopyFiles=Drivers_Dir

[Drivers_Dir]
ForceDelete.sys

;-------------- Service installation
[ForceDelete_Device.NT.Services]
AddService = ForceDelete,%SPSVCINST_ASSOCSERVICE%, ForceDelete_Service_Inst

; -------------- ForceDelete driver install sections
[ForceDelete_Service_Inst]
DisplayName    = %ForceDelete.SVCDESC%
ServiceType    = 1               ; SERVICE_KERNEL_DRIVER
StartType      = 3               ; SERVICE_DEMAND_START
ErrorControl   = 1               ; SERVICE_ERROR_NORMAL
ServiceBinary  = %12%\ForceDelete.sys

;
;--- ForceDelete_Device Coinstaller installation ------
;

[ForceDelete_Device.NT.CoInstallers]
AddReg=ForceDelete_Device_CoInstaller_AddReg
CopyFiles=ForceDelete_Device_CoInstaller_CopyFiles

[ForceDelete_Device_CoInstaller_AddReg]
HKR,,CoInstallers32,0x00010000, "WdfCoInstaller$KMDFCOINSTALLERVERSION$.dll,WdfCoInstaller"

[ForceDelete_Device_CoInstaller_CopyFiles]
WdfCoInstaller$KMDFCOINSTALLERVERSION$.dll

[ForceDelete_Device.NT.Wdf]
KmdfService =  ForceDelete, ForceDelete_wdfsect
[ForceDelete_wdfsect]
KmdfLibraryVersion = $KMDFVERSION$

[Strings]
SPSVCINST_ASSOCSERVICE= 0x00000002
ManufacturerName="<Your manufacturer name>" ;TODO: Replace with your manufacturer name
ClassName="Samples" ; TODO: edit ClassName
DiskName = "ForceDelete Installation Disk"
ForceDelete.DeviceDesc = "ForceDelete Device"
ForceDelete.SVCDESC = "ForceDelete Service"
